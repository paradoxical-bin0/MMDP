<!-- for responsive navbar -->
<script>
    const toggleButton = document.getElementById('nav-toggle');
    const navLinks = document.getElementById('nav-links');
    
    toggleButton.addEventListener('click', () => {
        toggleButton.classList.toggle('active');
        navLinks.classList.toggle('active');
    })   
</script>

<!-- for scrolling -->

<script>
    // Function to scroll to the target section smoothly
    function scrollToBottom() {
        const targetSection = document.querySelector('#bottom-section');
        targetSection.scrollIntoView({ behavior: 'smooth' });
    }
    function scrollToResource() {
        const targetSection = document.querySelector('#resource-section');
        targetSection.scrollIntoView({ behavior: 'smooth' });
    }
    function scrollToPricing(){
        const targetSection = document.querySelector('#pricing-section');
        targetSection.scrollIntoView({ behavior: 'smooth'});
    }

    // Add an event listener to the link
    const scrollLink_connect = document.querySelector('a[href="#bottom-section"]');
    const scrollLink_resource = document.querySelector('a[href="#resource-section"]');
    const scrollLink_pricing = document.querySelector('a[href="#pricing-section"]');

    scrollLink_connect.addEventListener('click', function (e) {
        e.preventDefault(); // Prevent the default link behavior
        scrollToBottom();
    });
    scrollLink_resource.addEventListener('click', function (e) {
        e.preventDefault(); // Prevent the default link behavior
        scrollToResource();
    });
    scrollLink_pricing.addEventListener('click', function (e) {
        e.preventDefault(); // Prevent the default link behavior
        scrollToPricing();
    });
</script>

